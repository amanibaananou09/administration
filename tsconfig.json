{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "target": "ESNext",
    "allowJs": true,
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
